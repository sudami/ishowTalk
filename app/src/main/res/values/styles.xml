<resources>

    <!-- Theme.AppCompat.Light.DarkActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:listDivider">@drawable/divider_background</item>
    </style>
    <style name="AppTheme.MusicPlayActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@drawable/divider_background</item>
    </style>

    <style name="AppTheme.practiceRank" parent="AppTheme" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/rank_header_content_color</item>
        <item name="android:listDivider">@drawable/divider_background</item>
    </style>

    <style name="AppTheme.PracticeActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top_pop</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom_pop</item>
    </style>

<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--radiobutton風格-->
    <style name="RadioButton_Style" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@drawable/selector_main_tab_textcolor</item>
    </style>

    <!--标题级文本风格-->
    <style name="text_title_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--主内容级文本风格1-->
    <style name="text_content_style_1" parent="text_title_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <!--副内容级文本风格2-->
    <style name="text_content_style_2" parent="text_title_style">
        <item name="android:layout_marginTop"> @dimen/course_activity_item_content_topMargin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <!--删除菜单的文本风格-->
    <style name="text_delete_menu" parent="text_title_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="editext" parent="Base.Widget.AppCompat.EditText">
      <item name="android:paddingLeft">@dimen/editext_drawable_padding</item>
        <item name="android:paddingRight">@dimen/editext_drawable_padding</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_recoder_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="quick_practice_textcell" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/first_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top_pop</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom_pop</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--标题级文本风格-->
    <style name="text_person_info" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="CallActivityThemeTranslucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppThemeChatNormalStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="mediaRecorderActivity_style" parent="AppTheme">
        <item name="colorAccent">#ff3a2f</item>
    </style>

</resources>
