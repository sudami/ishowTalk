<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_appbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/split_line_color"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/aboutUs"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/self_left_margin"
            android:text="关于iShow"
            android:textColor="@color/first_text_color"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/self_left_margin"
            android:background="@color/split_line_color" />

        <TextView
            android:id="@+id/changePw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/self_left_margin"
            android:text="修改密码"
            android:textColor="@color/first_text_color"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/self_left_margin"
            android:background="@color/split_line_color" />

        <TextView
            android:id="@+id/suggestion"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/self_left_margin"
            android:text="意见反馈"
            android:textColor="@color/first_text_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/self_left_margin"
            android:background="@color/split_line_color" />

        <TextView
            android:id="@+id/clearCache"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/self_left_margin"
            android:text="清除缓存(所有已下载课程)"
            android:textColor="@color/first_text_color"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="@dimen/self_left_margin"
            android:background="@color/split_line_color" />

        <TextView
            android:id="@+id/checkNew"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/self_left_margin"
            android:text="检测更新"
            android:textColor="@color/first_text_color"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/split_line_color" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/button_login_background"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>