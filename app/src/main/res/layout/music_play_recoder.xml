<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:background="@drawable/progressbar"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/music_play_recoder_image"
        android:layout_marginTop="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:src="@mipmap/luyin1"/>
     <RelativeLayout
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="26dp">
         <ImageView
             android:id="@+id/music_play_recoder_play"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:src="@mipmap/icon_record_bofang"/>
         <com.example.ishow.UIView.CircleProgressBar
             android:id="@+id/progrssbar"
             android:layout_width="60dp"
             android:layout_height="60dp"
             app:max="100"
             app:roundColor="#D1D1D1"
             app:roundProgressColor="@color/colorPrimary"
             app:roundWidth="2dp"
             android:layout_centerInParent="true"
             app:textSize="0sp"/>
     </RelativeLayout>

    <TextView
        android:id="@+id/music_play_recoder_time_false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 S"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/music_play_recoder_image"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        style="@style/text_recoder_text"/>


     <TextView
         android:id="@+id/music_play_recoder_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="0 S"
         android:layout_marginTop="34dp"
         android:layout_below="@+id/music_play_recoder_image"
         android:layout_centerHorizontal="true"
         style="@style/text_recoder_text"/>

    <TextView
        android:id="@+id/music_play_recoder_split"
        android:layout_below="@+id/music_play_recoder_time"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        android:visibility="gone"
        android:layout_marginTop="10dp">
    </TextView>

    <LinearLayout
        android:id="@+id/music_play_recoder_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/music_play_recoder_split"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/music_play_recoder_tips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:text="上滑,松手取消"
            android:gravity="center" />
        <TextView
            android:id="@+id/music_play_recoder_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"
            android:text="放弃" />
        <TextView
            android:id="@+id/split_v"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#cccccc"/>

        <TextView
            android:id="@+id/music_play_recoder_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:visibility="gone"
            android:gravity="center"
            android:text="保存" />
    </LinearLayout>-->

