<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/gallery_item_cardview"
    android:layout_width="110dp"
    android:layout_margin="5dp"
    android:layout_height="110dp">
        <ImageView
            android:id="@+id/gallery_item_mediaavart"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:background="@mipmap/ic_launcher"
            android:layout_height="match_parent"
            />

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/gallery_item_media"
               android:layout_width="16dp"
               android:layout_height="18dp"
               android:textColor="@color/white"
               android:layout_marginLeft="3dp"
               android:background="@drawable/icon_isvideo"
               android:layout_alignBottom="@+id/media_item_mediaavart"
               android:layout_alignParentLeft="true" />

           <TextView
               android:id="@+id/gallery_media_size"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:layout_marginRight="3dp"
               android:textSize="10sp"
               android:layout_alignBottom="@+id/media_item_mediaavart"
               android:layout_alignParentRight="true"
               />
       </RelativeLayout>

    <CheckBox
        android:id="@+id/gallery_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:button="@drawable/checkbox"
        android:layout_alignParentRight="true" />
</RelativeLayout>