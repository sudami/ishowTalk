<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rank_header_content_color"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/guanjun">

        <ImageView
            android:id="@+id/rank_item_header_avart"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/rank_item_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank_item_header_avart"
        android:layout_marginTop="7dp"
        android:text="11111"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rank_item_header_name"
            android:layout_marginTop="7dp"
            android:text="累计练习时间:"
            android:textColor="@android:color/white"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/rank_item_header_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="12h50mins:"
            android:textColor="#f6ee12"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/fragment_rank_list_item"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/split_line_color"/>
</LinearLayout>