<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/video_item_avart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/icon_videodir"
        android:scaleType="center"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/video_item_dir"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/first_text_color"
        android:layout_toRightOf="@+id/video_item_avart"
        android:layout_marginLeft="8dp"
        android:text="Camera"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/video_item_dirCount"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/secondary_text_color"
        android:layout_toRightOf="@+id/video_item_avart"
        android:layout_marginLeft="8dp"
        android:text="1 video"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/video_item_dir"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_jinru"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:background="#f1f1f1"/>
</RelativeLayout>