<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/media_item_mediaavart"
           android:layout_width="180dp"
           android:layout_height="180dp"
           android:background="@mipmap/ic_launcher"
           android:layout_marginBottom="37dp"
           />
       <TextView
           android:id="@+id/media_item_mediatime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:textSize="14sp"
           android:text="05:20"
           android:layout_marginLeft="10dp"
           android:layout_alignBottom="@+id/media_item_mediaavart"
           android:layout_marginBottom="5dp"
           android:layout_alignParentLeft="true" />
       <TextView
           android:id="@+id/media_item_mediatitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:text="宋余保同学的口测视频"
           android:textColor="@color/first_text_color"
           android:layout_below="@+id/media_item_mediatime"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="5dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

       <TextView
           android:id="@+id/media_item_mediadescrption"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:text="宋余保同学的口测视频"
           android:textColor="@color/secondary_text_color"
           android:layout_below="@+id/media_item_mediatitle"
           android:layout_marginTop="3dp"
           android:layout_marginLeft="5dp"
           android:layout_marginBottom="5dp"
           android:maxLength="7"
           android:ellipsize="end"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

       <TextView
           android:id="@+id/media_item_addtime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:text="2016/5/02"
           android:textColor="@color/secondary_text_color"
           android:layout_toRightOf="@+id/media_item_mediadescrption"
           android:layout_below="@+id/media_item_mediatitle"
           android:layout_marginTop="3dp"
           android:layout_marginLeft="5dp"
           android:layout_marginBottom="5dp"
           android:gravity="right"
           android:layout_marginRight="5dp"
           android:maxLength="10"
           android:ellipsize="end"
           android:layout_alignRight="@+id/media_item_mediaavart"
           android:layout_alignEnd="@+id/media_item_mediaavart" />
   </RelativeLayout>
</android.support.v7.widget.CardView>