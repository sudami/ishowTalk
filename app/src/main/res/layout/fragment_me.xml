<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/self_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/self_avart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/self_left_margin"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/self_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/self_avart"
                android:maxEms="8"
                android:textColor="@color/first_text_color"/>

            <TextView
                android:id="@+id/self_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/self_avart"
                android:layout_below="@+id/self_name"
                android:maxEms="8"
                android:textColor="@color/secondary_text_color"/>

            <TextView
                android:id="@+id/self_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/self_avart"
                android:layout_below="@+id/self_school"
                android:layout_marginBottom="20dp"
                android:textColor="@color/secondary_text_color"/>

            <TextView
                android:id="@+id/self_TimeStudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/self_Time"
                android:layout_below="@+id/self_school"
                android:layout_marginBottom="20dp"
                android:textColor="#ff6000"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_jinru"
                android:layout_marginRight="@dimen/self_left_margin"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/split_line_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/fans_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/icon_guanzhu_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/first_text_color"
                    android:text="关注"/>

                <TextView
                    android:id="@+id/self_guanzhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/secondary_text_color"
                    android:text="0"/>


            </LinearLayout>
            <TextView
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/split_line_color"/>
            <LinearLayout
                android:id="@+id/luyin_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/icon_luyin_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/first_text_color"
                    android:text="录音"/>

                <TextView
                    android:id="@+id/self_luyin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/secondary_text_color"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/split_line_color"/>

        <!--文本练习-->
        <RelativeLayout
            android:id="@+id/wenbenLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/icon_paihang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:src="@mipmap/icon_paihang"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/icon_wenbenduilian_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/first_text_color"
                android:text="文本练习排行榜"
                android:layout_toRightOf="@+id/icon_paihang"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/self_left_margin"
                android:src="@mipmap/icon_jinru"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/split_line_color"/>
        </RelativeLayout>


        <!--视频对练记录-->
        <RelativeLayout
            android:id="@+id/jiluLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/icon_duilian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:src="@mipmap/icon_duilian"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/icon_duilianjilu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/first_text_color"
                android:text="视频对练记录"
                android:layout_toRightOf="@+id/icon_duilian"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/self_left_margin"
                android:src="@mipmap/icon_jinru"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:background="@color/split_line_color"/>
        </RelativeLayout>

        <!--下载管理-->
        <RelativeLayout
            android:id="@+id/xiazaiLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/icon_xiazai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:src="@mipmap/icon_xiazai"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/icon_xiazai_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/first_text_color"
                android:text="下载管理"
                android:layout_toRightOf="@+id/icon_xiazai"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/self_left_margin"
                android:src="@mipmap/icon_jinru"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/split_line_color"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/split_line_color"/>
        <!--视频对练-->
        <RelativeLayout
            android:id="@+id/shipinLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/icon_shipinpaihang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:src="@drawable/icon_shipin"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/icon_shipinduilian_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/first_text_color"
                android:text="学员成长纪实"
                android:layout_toRightOf="@+id/icon_shipinpaihang"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/self_left_margin"
                android:src="@mipmap/icon_jinru"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/split_line_color"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/split_line_color"/>
        <!--设置-->
        <RelativeLayout
            android:id="@+id/shezhiLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/icon_shezhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:src="@mipmap/icon_shezhi"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/icon_shezhi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/first_text_color"
                android:text="帮助与反馈"
                android:layout_toRightOf="@+id/icon_shezhi"
                android:layout_marginLeft="@dimen/self_left_margin"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/self_left_margin"
                android:src="@mipmap/icon_jinru"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/split_line_color"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
</LinearLayout>