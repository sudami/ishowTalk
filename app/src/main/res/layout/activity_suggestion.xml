<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_appbar"></include>
    <EditText
        android:id="@+id/et_comment"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/self_left_margin"
        android:paddingRight="@dimen/self_left_margin"
        android:paddingTop="60dp"
        android:background="@color/white"
        android:gravity="top"
        android:minHeight="200dp"
        android:autoLink="all"
        android:lineSpacingExtra="5dp"
        android:hint="您的反馈促使我们进步,但请按照一定格式反馈,谢谢！\n反馈格式如下：\n①手机系统：Android 6.0 or IOS 9.3.1 \n②手机型号:如华为荣耀,小米2s\n③错误描述:如下载中级班课程崩溃,ios打开崩溃,安卓转换播放速率崩溃"
        android:textColor="@android:color/black"
        android:textColorHint="@color/secondary_text_color"
        android:textSize="14sp" />
</android.support.design.widget.CoordinatorLayout>