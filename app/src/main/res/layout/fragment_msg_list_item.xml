<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/practice_item_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/self_left_margin"
            android:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/self_left_margin"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/practice_item_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="張小燕"
                android:gravity="bottom"
                android:textColor="@color/first_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/practice_item_secondName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="張小燕"
                android:singleLine="true"
                android:maxEms="20"
                android:ellipsize="end"
                android:textColor="@color/secondary_text_color"
                android:textSize="12sp" />
        </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:minWidth="30dp"
           android:gravity="center"
           android:layout_marginRight="@dimen/self_left_margin"
           android:orientation="vertical">
           <TextView
               android:id="@+id/time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:minWidth="15dp"
               android:minHeight="15dp"
               android:gravity="center"
               android:text="1"
               android:textColor="@color/secondary_text_color"
               android:textSize="14sp" />

           <TextView
               android:id="@+id/unread"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:minWidth="16dp"
               android:minHeight="16dp"
               android:gravity="center"
               android:background="@drawable/msg_red_tips"
               android:textColor="@color/white"
               android:textSize="12sp" />
       </LinearLayout>


       </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/self_left_margin"
        android:background="@color/split_line_color"/>
</LinearLayout>