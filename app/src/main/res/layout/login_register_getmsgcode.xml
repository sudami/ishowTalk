<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.design.widget.TextInputLayout
          android:id="@+id/getCodeInput"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <com.example.ishow.UIView.MaterialEditext
              android:id="@+id/getcodeEditext"
              android:layout_width="match_parent"
              android:textSize="16sp"
              android:textColorHint="#9a9a9a"
              android:drawablePadding="14dp"
              android:paddingLeft="@dimen/editext_drawable_padding"
              myapp:errorEnabled="true"
              android:hint="验证码"
              android:inputType="number"
              android:paddingRight="@dimen/editext_drawable_padding"
              android:layout_height="@dimen/editext_height" />
      </android.support.design.widget.TextInputLayout>
      <TextView
          android:layout_width="2px"
          android:layout_height="20dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="120dp"
          android:background="@color/colorPrimary">

      </TextView>

      <TextView
          android:id="@+id/getcodetext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:text="获取验证码"
          android:gravity="right"
          android:textSize="16sp"
          android:textColor="@color/colorPrimary"
          android:paddingRight="@dimen/editext_drawable_padding"
          android:layout_centerVertical="true">
      </TextView>
  </RelativeLayout>
</LinearLayout>