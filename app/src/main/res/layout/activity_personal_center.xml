<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="-100dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:background="@mipmap/person_info_bg"
            />

        <com.example.ishow.UIView.PullScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:headerHeight="300dp"
            app:headerVisibleHeight="130dp"
            android:layout_marginBottom="49dp"
            android:fillViewport="true">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_marginTop="85dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:id="@+id/person_avart"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="14dp"
                       />
                   <LinearLayout
                       android:id="@+id/person_infolayout"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@+id/person_avart"
                       android:layout_marginTop="14dp"
                       android:orientation="horizontal">
                       <TextView
                           android:id="@+id/person_name"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@android:color/white"
                           android:layout_marginRight="5dp"
                           android:maxEms="8"
                           android:textSize="16sp"/>
                       <ImageView
                           android:id="@+id/person_state"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/icon_guanzhu"/>
                   </LinearLayout>

                   <TextView
                       android:id="@+id/person_sign"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/white"
                       android:layout_marginTop="10dp"
                       android:layout_below="@+id/person_infolayout"
                       android:layout_centerHorizontal="true"
                       android:maxEms="15"
                       android:textSize="12sp"/>

               </RelativeLayout>
               <!--校区-->
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_marginTop="70dp"
                   android:layout_height="45dp">
                   <TextView
                       style="@style/text_person_info"
                       android:layout_alignParentLeft="true"
                       android:text="iShow校区"/>
                   <TextView
                       android:id="@+id/school"
                       style="@style/text_person_info"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:layout_centerVertical="true"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="1px"
                       android:layout_alignParentBottom="true"
                       android:background="#e6e6e6"
                       />
               </RelativeLayout>

               <!--学校-->
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp">
                   <TextView
                       style="@style/text_person_info"
                       android:layout_alignParentLeft="true"
                       android:text="学校"/>
                   <TextView
                       android:id="@+id/real_school"
                       style="@style/text_person_info"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:layout_centerVertical="true"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="1px"
                       android:layout_alignParentBottom="true"
                       android:background="#e6e6e6"
                       />
               </RelativeLayout>

               <!--班级-->
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp">
                   <TextView
                       style="@style/text_person_info"
                       android:layout_alignParentLeft="true"
                       android:text="班级"/>
                   <TextView
                       android:id="@+id/claz"
                       style="@style/text_person_info"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:layout_centerVertical="true"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="1px"
                       android:layout_alignParentBottom="true"
                       android:background="#e6e6e6"
                       />
               </RelativeLayout>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="10dp"
                   android:background="#f1f1f1"/>
               <!--累计排行-->
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp">
                   <TextView
                       style="@style/text_person_info"
                       android:layout_alignParentLeft="true"
                       android:text="本周全国排名"/>
                   <TextView
                       android:id="@+id/country_rank"
                       style="@style/text_person_info"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:textColor="#fd4241"
                       android:layout_centerVertical="true"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="1px"
                       android:layout_alignParentBottom="true"
                       android:background="#e6e6e6"
                       />
               </RelativeLayout>
               <!--今日排名-->
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp">
                   <TextView
                       style="@style/text_person_info"
                       android:layout_alignParentLeft="true"
                       android:text="今日练习时间"/>
                   <TextView
                       android:id="@+id/today_rank"
                       style="@style/text_person_info"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:textColor="#fd4241"
                       android:layout_centerVertical="true"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="1px"
                       android:layout_alignParentBottom="true"
                       android:background="#e6e6e6"
                       />
               </RelativeLayout>

               <!--本周排行-->
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp">
                   <TextView
                       style="@style/text_person_info"
                       android:layout_alignParentLeft="true"
                       android:text="本周练习时间"/>
                   <TextView
                       android:id="@+id/week_rank"
                       style="@style/text_person_info"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:textColor="#fd4241"
                       android:layout_centerVertical="true"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="1px"
                       android:layout_alignParentBottom="true"
                       android:background="#e6e6e6"
                       />
               </RelativeLayout>

               <!--累计排行-->
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp">
                   <TextView
                       style="@style/text_person_info"
                       android:layout_alignParentLeft="true"
                       android:text="本周练习时间"/>
                   <TextView
                       android:id="@+id/total_rank"
                       style="@style/text_person_info"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:textColor="#fd4241"
                       android:layout_centerVertical="true"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="1px"
                       android:layout_alignParentBottom="true"
                       android:background="#e6e6e6"
                       />
               </RelativeLayout>
           </LinearLayout>
        </com.example.ishow.UIView.PullScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
       android:layout_alignParentBottom="true"
        android:orientation="horizontal">
     <ImageView
         android:id="@+id/msg"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:src="@mipmap/msg"/>
        <ImageView
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/call"/>
    </LinearLayout>
    <include layout="@layout/activity_titlebar"></include>


</RelativeLayout>